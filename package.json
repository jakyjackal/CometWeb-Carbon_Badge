{
    "name": "@cometweb/carbon-badge",
    "version": "1.0.0",
    "description": "Lightweight web component badge showing CO₂e emissions per page view — powered by CometWeb & SWDM v4",
    "main": "dist/cometweb-carbon-badge.umd.js",
    "module": "dist/cometweb-carbon-badge.esm.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/cometweb-carbon-badge.esm.js",
            "require": "./dist/cometweb-carbon-badge.umd.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "rollup -c rollup.config.mjs",
        "dev": "rollup -c rollup.config.mjs --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "carbon",
        "co2",
        "sustainability",
        "web-component",
        "badge",
        "cometweb",
        "swdm",
        "ecology",
        "green-web"
    ],
    "author": "CometWeb <hello@cometweb.io>",
    "license": "MIT",
    "homepage": "https://cometweb.io",
    "repository": {
        "type": "git",
        "url": "https://github.com/cometweb/carbon-badge"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.0",
        "rollup": "^4.28.0",
        "rollup-plugin-terser": "^7.0.2",
        "tslib": "^2.8.0",
        "typescript": "^5.7.0"
    }
}